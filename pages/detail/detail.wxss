/* pages/detail/detail.wxss */
@import '/public/fonts/font.wxss';
page {
    background: #e8e8ed;
}
.banner image {
    width: 100%;
    height: 828rpx;
}
.banner swiper {
    height: 828rpx;
}

.banner-img image {
    width: 100%;
    height:110rpx;
}
.info {
    background: #fff;
}

.info-top {
    display: flex;
    padding-top:32rpx;
    padding-left:20rpx;
    padding-right:20rpx;
    justify-content: space-between;
    font-size: 12px;
    line-height: 40rpx;

}
.info-top .price {
    font-size: 24px;
    color: #e4393c;
    font-weight: bold;
}
.info-top .price text {
    font-size: 18px;
    
}
.info-1 {
    padding: 10rpx 20rpx;
}
.ico {
    display: flex;
    flex-direction: column;

}
.ico text {
    font-size:10px;
    color:#999;
}
.icon-shoucang {
    text-align:center;
    font-size: 16px;
    color:#999;
}
.double1 {
    width: 90rpx;
    height: 28rpx;
   
}
.double2 {
    width: 52rpx;
    height: 30rpx;
   
}
.info-title text {
    font-size: 16px;
    font-weight: bold;
    line-height: 48rpx;
    color: #333;

}
.info-more {
   padding-top:10rpx;
   color: #999;
   font-size:12px;
}


/* 评论 */
.scroll {
    margin-top:20rpx;
    height: 500rpx;
    background: #fff;
}
.comm-top {
    display: flex;
    justify-content: space-between;
    border-bottom:1px solid #ddd;
    padding:0 20rpx;
    line-height: 35rpx;
    align-content: center;
}
.top-left {
    font-size:16px;
    color: #333;
    padding:20rpx 0;
    display: flex;
   
}
.top-left .red {
    color: #e4393c;
    font-size:12px;
    margin-left:20rpx;
}
.top-left .red text {
    font-weight: bold;
}
.top-right{
    color: #666;
    font-size:12px;
    padding:20rpx 0rpx;
    
}
.comm-list {
    padding: 20rpx 20rpx;
}
.comm-user {
    display: flex;
    justify-content: space-between;
    line-height: 50rpx;
    font-size: 12px;
    margin-left:20rpx;
}
.comm-user .comm-pic {
    display: flex;
    align-content: center;
}
.comm-user image {
    width: 50rpx;
    height: 50rpx;
    margin-right:20rpx;
}
.comm-time {
    color: #999;
}
.comm-content {
    margin:10rpx 0;
    font-size: 14px;
    word-break: break-all;
    overflow: hidden;
    max-height: 126px;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.icon-fanhuidingbu1 {
    font-size:28px;
    color: #333;
    position: fixed;
    bottom:150rpx;
    right:20rpx;
}

/* 底部 */
.foot {
    display: flex;
    margin-top:30rpx;
    background: #fff;
    height: 60rpx;
    justify-content: space-between;
    padding:10rpx 20rpx;
}
.add-comm {
    display: flex;
    line-height: 60rpx;
   
}
.add-comm input {
    height: 60rpx;
    line-height: 60rpx;
    width: 400rpx;
    font-size: 12px;
    border-bottom:1px solid #999;
  
}
button {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 14px;
}